{
  "name": "rcld-student-icard",
  "version": "1.0.0",
  "description": "Rcld App",
  "author": "Rcld App",
  "license": "MIT",
  "copyright": "Copyright Â© 2025 Rcld App",
  "productName": "Rcld App",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",

  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron electron/main.cjs",
    "start": "concurrently \"vite\" \"npm run electron\"",
    "build": "vite build && electron-builder",
    "start:prod": "electron ."
  },

  "dependencies": {
    "@tailwindcss/vite": "^4.0.14",
    "lucide-react": "^0.483.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.3.0",
    "tailwindcss": "^4.0.14"
  },

  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "concurrently": "^9.1.2",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },

  "build": {
    "appId": "com.api.biki",
    "productName": "Rcld App",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**",
      "electron/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/rcld-logo-ico.ico",
      "signtoolOptions": {
      "publisherName": "Biki Mandal"
    }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer/installation-location.nsh"
    }
  }
}
